{
	"compilerOptions": {
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.tsx"]
}
